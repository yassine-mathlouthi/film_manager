rules_version = '2';

service firebase.storage {
  match /b/{bucket}/o {
    // Profile images - users can read anyone's profile, but only write their own
    match /profile_images/{userId} {
      allow read: if request.auth != null;
      allow write: if request.auth != null && request.auth.uid == userId.replace('.jpg', '');
    }
    
    // Fallback for all profile images
    match /profile_images/{allImages=**} {
      allow read: if request.auth != null;
      allow write: if request.auth != null 
                   && request.resource.size < 5 * 1024 * 1024 // Max 5MB
                   && request.resource.contentType.matches('image/.*');
    }
  }
}
